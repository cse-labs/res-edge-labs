#!/bin/bash

set -e

if [ -z "${KIC_DATASERVICE_URL}" ]; then
    echo "Error! Please set environment variable: KIC_DATASERVICE_URL";
    exit 1;
fi

function resedge_check {
    http "${KIC_DATASERVICE_URL}"/version
}

if ! resedge_check; then
    echo "Res-Edge Data Service is not Running";
else
    echo "Res-Edge Data Service is Running";
fi
